---
import Icon from "../components/Icon.astro";
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <Icon href="/blog/" name="Go Back Icon" src="../icons/back-icon.png" height="15px" width="15px" text="Go back"/>
  <article class="blog-post">
    <slot />
  </article>
</BaseLayout>

<style is:global>
  .back-btn {
    display: flex;
    align-items: center;
  }

  .back-btn p {
    margin: 0;
  }

  .back-btn img {
    margin: 0;
  }

  .blog-post h1 {
    color: var(--blue-primary);
    margin-top: 0;
  }

  .blog-post h3 {
    font-weight: 400;
    font-style: italic;
    margin-bottom: 0;
  }

  .blog-post h4 {
    font-weight: 200;
    margin: 0.25rem 0;
  }

  .blog-post pre {
    padding: 1rem;
    border-radius: 10px;
  }

  .blog-post .word-emphasis {
    color: black;
    background-color: lightgray;
    padding: 0.25rem;
    border-radius: 3px;
  }

  .blog-post img {
    width: 100%;
    object-fit: contain;
    border-radius: 10px;
  }
</style>
