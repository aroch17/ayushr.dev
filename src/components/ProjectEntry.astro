---
const {name, src, href, desc} = Astro.props
---

<div class="project-box">
  <img src={src} alt=""/>
  <a href={href} target="_blank">{name}</a>
  <p>{desc}</p>
</div>

<style>
  .project-box {
    width: 100%;
    border: 1px solid rgba(0, 0, 0, 0.25);
    border-radius: 10px;
    padding: 0 0 1rem 0;
    margin: 0 0 2rem 0;
  }

  img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    object-position: top;
    border-radius: 10px;
  }

  a {
    font-size: 1.5rem;
    margin: 1rem;
  }

  p {
    margin: 0 1rem;
    font-size: 1rem;
  }
</style>